<Window x:Class="ST10159078_PROG6221_POE.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10159078_PROG6221_POE"
        mc:Ignorable="d"
         Title="Scale Recipe" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Scaling Factor:" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="txtScalingFactor" Margin="10" Grid.Row="1" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Button x:Name="btnScale" Content="Scale Recipe" Margin="10" Grid.Row="2" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnScale_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="10" Grid.Row="3" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnCancel_Click"/>
    </Grid>
</Window>